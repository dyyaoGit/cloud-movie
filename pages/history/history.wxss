/* pages/history/history.wxss */
.history {
    padding: 20px;
    padding-top: 10px;
}

.history-item {
    margin-top: 20rpx;
    display: flex;
}

.history-item .img {
    display: block;
    width: 226rpx;
    height: 260rpx;
}

.history-item-right {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-left: 15px;
}

.history-item-right {
    flex: 1;
    color: #333;
    font-size: 16px;
}

.history-item-right .progress {
    width: 100%;
    margin-top: 10px;
}

.history-item-right .time {
    color: #888;
    font-size: 12px;
}
