/* pages/articleDetails/articleDetails.wxss */
@import '../../wxParse/wxParse.wxss';

.img-wrap .img {
    display: block;
    width: 100%;
    height: 460rpx;
    border-bottom: 1rpx solid #f1f1f1;
}

.author-msg {
    display: flex;
    align-items: center;
    padding: 20px;
}

.author-msg .avatar {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    margin-right: 20px;
}

.author-msg .author {
    font-size: 13px;
    font-weight: 300;
    margin-right: 10px;
}

.author-msg .publish {
    font-size: 12px;
    font-weight: 300;
    color: #888;
    margin-right: 20px;
}

.author-msg .day {
    font-size: 12px;
    color: #666;
    font-weight: 300;
}

.article-details .title {
    font-size: 16px;
    padding: 20px;
    padding-top: 0;
}

.menu {
    display: flex;
    justify-content: flex-end;
    position: relative;
    height: 80rpx;
    padding: 0 20px;
}

.menu .icon {
    position: relative;
    z-index: 998;
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    padding: 0;
    margin: 0;
    margin-left: 20px;
    text-align: center;
    line-height: 80rpx;
    color: #fff;
    font-size: 22px;
}
.icon:first-child {
    background: #d9d9d9;
}

.icon:nth-child(2) {
    background: #4db1a1;
}

.menu::after {
    content: "";
    position: absolute;
    left: 20px;
    right: 20px;
    top: 50%;
    height: 1px;
    background: #000;
    transform: translateY(-50%);
}

.content {
    padding: 20px;
}
