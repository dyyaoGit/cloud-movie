/* pages/movieDetails/movieDetails.wxss */
.movie-details .video {
    display: block;
    width: 100%;
    height: 500rpx;
}

.play-list {
    display: flex;
    flex-wrap: wrap;
    padding: 20px;
}

.play-list-item {
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0;
    width: 210rpx;
    padding: 10px 0;
    border: 1rpx solid #e0e0e0;
    text-align: center;
    line-height: 1;
    font-size: 12px;
    margin-right: 10rpx;
    margin-top: 20rpx;
    color: #888;

}
.play-list-item:nth-child (3n) {
    margin-right: 0;
}

.active {
    border: 1rpx solid #409eff;
}

.movie-desc {
    padding: 0 20px 20px 20px;
}

.row-one {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.row-one .title {
    font-size: 16px;
}

.row-one .desc {
    color: #888;
    font-size: 12px;
}

.douban {
    display: flex;
    align-items: flex-start;
    padding: 0;
    color: #ff6700;
    font-size: 12px;
}
.douban .douban-text {
    padding: 0;
    margin: 0;
    line-height: 1;
}

.desc-content {
    margin-top: 20rpx;
    color: #888;
    font-size: 12px;
    line-height: 1.5;
}

.guess {
    padding: 20px;
}

.guess .title {
    font-size: 16px;
}

.guess-content .item {
    margin-top: 20rpx;
    display: flex;
}

.guess-content .item .item-img {
    display: block;
    flex-basis: 226rpx;
    width: 226rpx;
    height: 260rpx;
    margin-right: 20rpx;
}

.guess-content .item-right {
    width: 424rpx;
}

.item-right .title {
    font-size: 16px;
}

.item-right .little-title {
    margin-top: 20rpx;
    font-size: 12px;
    color: #888;
}
