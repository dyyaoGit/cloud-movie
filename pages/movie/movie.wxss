/* pages/movie/movie.wxss */

.movie .swiper {
    height: 500rpx;
}

.movie .swiper .swiper-img {
    display: block;
    width: 100%;
    height: 500rpx;
}

.hot-movie {
    padding: 20px;
}

.hot-move .title {
    font-size: 16px;
}

.movie-content {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}

.movie-content .movie-item {
    margin-top: 20rpx;
    width: 210rpx;
    height: 340rpx;
    font-size: 12px;
    text-align: center;
    color: #888;
}

.movie-item .movie-img {
    display: block;
    width: 100%;
    height: 260rpx;
}

.movie-item .title {
    margin-top: 10rpx;
}
