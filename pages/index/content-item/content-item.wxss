/* pages/index/content-item/content-item.wxss */

.content-item {
    border-top: 1rpx solid #eee;
    margin-top: 20px;
}

.content-msg {
    display: flex;
    align-items: center;
    padding: 0 20px;
}

.content-msg .author-avatar {
    width: 60rpx;
    height: 60rpx;
    margin-right: 20px;
    border-radius: 50%;
}

.content-msg .time {
    display: block;
    font-size: 14px;
    color: #888;
    margin-bottom: 20px;
}

.content-item .title {
    font-size: 18px;
    font-weight: 400;
    color: #333;
    padding: 0 20px;
}

.content-item .main-img {
    margin-top: 10px;
    display: block;
    width: 100%;
    height: 400rpx;
    border-top: 1rpx solid #f1f1f1;
    border-bottom: 1rpx solid #f1f1f1;
}

.content-pre {
    padding: 20px;
    color: #888;
    font-size: 13px;
    line-height: 1.5;
}
