/**index.wxss**/

.container .news-swiper {
    height: 600rpx;
    border-bottom: 1rpx solid #f1f1f1;
}

.swiper-item-wrap {
    position: relative;
}

.swiper-title {
    position: absolute;
    bottom: 20px;
    left: 20px;
    right: 20px;
    font-size: 16px;
    color: #000;
    text-align: center;
}

.news-swiper .news-swiper-img {
    display: block;
    width: 100%;
    height: 600rpx;
}
